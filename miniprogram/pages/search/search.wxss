/* miniprogram/pages/search/search.wxss */
page{
  background-color: rgb(86, 152, 195);

}
.search{
  width: 100%;
  height: 100rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: space-between;
}
.search_input{
  width: 450rpx;
  margin-left: 50rpx;
  border: #126BAE solid 1rpx;
}
.search_input input{
  width: 80%;
  height: 80%;
  padding-left: 20rpx;
  padding-top: 10rpx;
}
.search_button{
  width: 200rpx;
  height: 100rpx;
  margin-right: 40rpx;
}
.search_button button{
  width: 100%;
  height: 100%;
  background-color: #126BAE;
  font-size: 37rpx;
}





.musicContaner{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.left{
  width: 20%;
  height: 100%;
}
.left image{
  width: 90%;
  height: 90%;
  margin: 5%;
  border-radius: 10%;
}
.center{
  width: 60%;
}
.songName{
  color: black;
  font-size: 30rpx;
  padding-left: 24rpx;
  margin-top: 20rpx;
}
.singerName{
  color: black;
  font-size: 25rpx;
  padding-left: 24rpx;
  margin-top: 25rpx;
}
.right{
  width: 20%;
  height: 100%;
}
.right image{
  width: 40%;
  height: 40%;
  margin: 30%;
}

