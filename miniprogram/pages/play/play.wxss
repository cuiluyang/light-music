/* miniprogram/pages/play/play.wxss */
.content{
  width: 100%;
  height: 100%;
  background-color: black;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}
.backgroundimg{
  width: 100%;
  height: 100%;
  opacity: 0.2;
}
.title{
  width: 100%;
  font-size: 40rpx;
  color: white;
  text-align: center;
  position: absolute;
  left: 0rpx;
  top: 100rpx;
}
.middle{
  width: 100%;
  height: 60%;
  position: absolute;
  left: 0rpx;
  top: 200rpx;
}
.middle-wrapper{
  width: 100%;
  height: 100%;
}
.song-wrapper{
  width: 100%;
  height: 100%;
}
.song-image{
  width: 650rpx;
  height: 650rpx;
  margin:50rpx auto;
}
.song-image image{
  width: 440rpx;
  height: 440rpx;
  border-radius: 50%;
  border: #222 solid 100rpx;
  animation: zhuan 3s linear infinite;
}
@keyframes zhuan{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
.song-word{
  width: 80%;
  height: 100%;
  margin: 0 auto;
  text-align: center;
}
.song-word text{
  display: block;
  color:rgb(255, 255, 255,0.5);
  font-size: 35rpx;
  line-height: 35rpx;
}
.song-word .currentLyric{
  color: #126BAE;
}
/*去掉歌词滚动条*/
::-webkit-scrollbar{
  width: 0rpx;
  height: 0rpx;
}

.comment{
  position: absolute;
  bottom: 210rpx;
  left: 0rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 80rpx;
}
.comment image{
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}
.control{
  width: 100%;
  height: 150rpx;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  background-color: #126BAE;
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}
.control image{
  width: 100rpx;
  height: 100rpx;
/*  margin-left: 110rpx;*/
  margin-top: 15rpx;
}
/*进度条*/
.progress-bar{
  width: 100%;
  height: 50rpx;
  position: absolute;
  left: 0rpx;
  bottom: 150rpx;
  display: flex;
  align-items: center;
}
.playTime,.allTime{
  width: 10%;
  height: 50rpx;
  color: #c3d7df;
  font-size: 30rpx;
}
.allTime{
  margin-right: 5rpx;
}
.playTime{
  margin-left: 5rpx;
}
.progress-bar slider{
  width: 75%;
  height: 50rpx;
  


}
